<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <title>Hello, world!</title>
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/dashboard.css">
  </head>
  <body>
    <div class="container">
      <!-- <div class="header-container">
        <h1>Hello <%= name %></h1>
        <span class="logout-button"><a type="button" class="btn btn-success" href="/logout">Logout</a></span>
      </div> -->
      <div class="header-container">
      <p><span class="text"> Hello <%= name %></span><span class="pull-right"><a type="button" class="btn btn-warning logout-button " href="/logout">Logout</a></span></p>
    </div>
      
      <% list.forEach((object)=>{ %>
          <div class="list-container">
            
              <h3><%= object.title %></h3>
              <span>
                <a href="/delete/<%=object._id%>" class="btn btn-danger delete-button">Delete</a>
              </span>
              <div class="description-container">
              <h5><%= object.description %></h5>
            </div>
              
          </div>
          
      <%})%>
      
      <form method="POST"action="/add">
        <div class="form-container">
        <div class="field-container">
          <input class="title"type="text" name="title" placeholder="Title">
          <br>
          <textarea class="description"type="text" name="description" cols="40"placeholder="Description"></textarea>
        </div>
        <div class="sumbit-container">
        <button type="submit" class="btn btn-success add-button">Add</button>
      </div>
      </div>
      </form>
    </div>
      
        
      
      
      
      
      
      
      
      <script src="https://use.fontawesome.com/aedf85deee.js"></script> 
      
      
      
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
